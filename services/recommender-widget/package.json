{
  "name": "@fixeat/widget",
  "version": "1.0.0",
  "description": "Fixeat AI Recommender Widget - Embeddable smart equipment recommendation chat widget",
  "main": "dist/fixeat-widget.min.js",
  "module": "src/fixeat-widget.js",
  "style": "src/fixeat-widget.css",
  "types": "dist/fixeat-widget.d.ts",
  "files": [
    "dist/",
    "src/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:types",
    "build:js": "webpack --mode production",
    "build:css": "postcss src/fixeat-widget.css -o dist/fixeat-widget.min.css --map",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "webpack serve --mode development --open",
    "dev:css": "postcss src/fixeat-widget.css -o dist/fixeat-widget.css --watch --map",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,css}\"",
    "analyze": "webpack-bundle-analyzer dist/fixeat-widget.min.js",
    "serve": "http-server examples/ -p 8080 -o",
    "clean": "rimraf dist/",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "size": "bundlesize"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fixeat-ai/widget.git"
  },
  "homepage": "https://fixeat.ai/widget",
  "bugs": {
    "url": "https://github.com/fixeat-ai/widget/issues"
  },
  "keywords": [
    "ai",
    "recommendations", 
    "widget",
    "equipment",
    "food-service",
    "embeddable",
    "chat",
    "javascript",
    "typescript",
    "restaurant",
    "bakery",
    "cafe",
    "business-intelligence"
  ],
  "author": {
    "name": "Fixeat AI Team",
    "email": "developers@fixeat.ai",
    "url": "https://fixeat.ai"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "^9.1.0",
    "bundlesize": "^0.18.0",
    "css-loader": "^6.8.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {},
  "peerDependencies": {},
  "bundlesize": [
    {
      "path": "./dist/fixeat-widget.min.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/fixeat-widget.min.css", 
      "maxSize": "15 kB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{js,ts}"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/fixeat-ai"
  }
}


